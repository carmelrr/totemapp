rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // TEMPORARY: Allow all access for debugging
    match /{allPaths=**} {
      allow read, write: if true;
    }
    
    // ==================== Community Routes Images ====================
    // תמונות מסלולי קהילה - נמחקות אוטומטית אחרי 30 יום
    match /community-routes/{userId}/{fileName} {
      // כל אחד יכול לקרוא תמונות
      allow read: if true;
      // רק המשתמש עצמו יכול להעלות לתיקייה שלו
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}