rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Spray Wall storage rules
    match /sprayWalls/{wallId}/seasons/{seasonId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null &&
        get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == "admin";
    }
    
    // General storage rules
    match /{allPaths=**} {
      // Allow read and write access for all authenticated users temporarily
      allow read, write: if request.auth != null;
    }
  }
}