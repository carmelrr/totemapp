// Firestore Security Rules - DEVELOPMENT MODE
// כללי אבטחה פרמיסיביים לסביבת פיתוח

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - כל פעולה מותרת לצורך פיתוח
    match /users/{userId} {
      allow read, write: if true;
    }

    // Routes collection - כל פעולה מותרת לצורך פיתוח  
    match /routes/{routeId} {
      allow read, write: if true;
    }

    // Feedbacks collection - כל פעולה מותרת לצורך פיתוח
    match /feedbacks/{feedbackId} {
      allow read, write: if true;
    }

    // Sub-collections under any document
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
