rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // חוקים עבור משתמשים
    match /users/{userId} {
      // רק המשתמש יכול לקרוא ולעדכן את הפרופיל שלו
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // אפשר לכל המשתמשים לקרוא פרופילים ציבוריים
      allow read: if request.auth != null;
      
      // גישה למנהלים
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // חוקים עבור מסלולים רגילים
    match /routes/{routeId} {
      allow read: if request.auth != null;
      // מאפשר לכל משתמש מחובר ליצור מסלול חדש
      allow create: if request.auth != null;
      // מאפשר ליוצר המסלול או למנהל לעדכן ולמחוק
      allow update, delete: if request.auth != null && (
        request.auth.uid == resource.data.createdBy ||
        isAdmin()
      );

      // פידבקים על מסלולים
      match /feedbacks/{feedbackId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && 
          request.auth.uid == request.resource.data.userId;
        allow update, delete: if request.auth != null && (
          request.auth.uid == resource.data.userId ||
          isAdmin()
        );
      }
    }

    // חוקים עבור לידרבורד
    match /leaderboard/{leaderboardId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // חוקים עבור מעקבים חברתיים
    match /following/{followId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.followerId;
      allow delete: if request.auth != null && 
        request.auth.uid == resource.data.followerId;
    }

    // חוקים עבור נתוני מערכת
    match /system/{systemId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isAdmin();
    }

    // חוקים עבור סטטיסטיקות כלליות
    match /stats/{statId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // חוקים עבור מטא-דטה של מסלולים
    match /routeMetadata/{routeId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // חוקים עבור Spray Walls
    match /sprayWalls/{wallId} {
      allow read: if true;
      allow write: if isAdmin();

      match /seasons/{seasonId} {
        allow read: if true;
        allow write: if isAdmin();

        match /routes/{routeId} {
          allow read: if true;
          // יצירת מסלול – כל מחובר / עריכה/מחיקה – אדמין
          allow create: if request.auth != null;
          allow update, delete: if isAdmin();
        }

        match /sends/{sendId} {
          allow read: if true;
          allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
          allow delete: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
          allow update: if false;
        }
      }
    }

    // פונקציה לבדיקת הרשאות מנהל
    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
